<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Allow sharing from app-specific external files dir (Documents/) -->
  <external-files-path
    name="docs"
    path="Documents/" />

  <!-- Also allow internal files cache if you later switch composer to cacheDir -->
  <files-path
    name="internal"
    path="." />
  <cache-path
    name="cache"
    path="." />
</paths>
